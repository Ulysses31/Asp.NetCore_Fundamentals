@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DeleteModel
@{
	ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<div class="alert alert-danger">
	Are you sure you want to delete @Model.restaurant.Name?
</div>
<form method="post">
	<button type="submit" class="btn btn-danger shadow-sm">Delete</button>
	<a asp-page="./List" class="btn btn-primary shadow-sm">Cancel</a>
</form>